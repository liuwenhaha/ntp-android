<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chzu.ntp.ui"
    android:installLocation="preferExternal">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.chzu.ntp.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Anim_style2">
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chzu.ntp.ui.SearchCourseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyEditStyle" />
        <activity
            android:name="com.chzu.ntp.ui.CoursetypeSelectActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyDialogStyleTop" />

    </application>

</manifest>
