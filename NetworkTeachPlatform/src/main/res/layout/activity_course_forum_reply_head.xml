<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/layout_bg_pressed"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/h_line"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/layout_bg_normal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/about"
                android:textColor="@color/green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:gravity="right"
                android:layout_marginRight="@dimen/my_margin_left"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/my_margin_left_right"
            android:text="@string/about"
            android:layout_marginBottom="6dp"
            android:textSize="15sp"
            android:textColor="@color/course_name" />
    </LinearLayout>

    <TextView
        android:id="@+id/comment__reply_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/load"
        android:layout_marginLeft="6dp"
        android:clickable="true"
        android:text="@string/comment"/>

</LinearLayout>