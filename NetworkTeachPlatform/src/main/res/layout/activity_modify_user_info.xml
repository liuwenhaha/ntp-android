<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_normal"
    android:orientation="vertical"
    tools:context="com.chzu.ntp.ui.RegisterActivity">

    <com.chzu.ntp.widget.MyTitleView
        android:id="@+id/myTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="12dp"
            android:cursorVisible="true"
            android:inputType="text"
            style="@style/MyEditStyle2"
            android:textColor="@color/menu_text_normal" />

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/layout_bg_normal"
            android:textSize="18sp"
            android:background="@drawable/rounded_login_btn"
            android:onClick="save"
            android:text="@string/confirm" />

    </LinearLayout>

</LinearLayout>
