<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/layout_bg_normal">
        <!--提示内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tip"
                android:layout_weight="1"
                android:text="@string/hello_world"
                android:textColor="@color/course_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:clickable="true"
                android:gravity="center" />
        </LinearLayout>
        <!--分割线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line"
            android:background="@color/divider_line" />
        <!-- 确定或者取消-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/course_name"
                android:clickable="true"
                android:background="@drawable/layout_selector_bg"
                android:text="取消" />

            <TextView
                android:layout_width="@dimen/divider_line"
                android:layout_height="match_parent"
                android:background="@color/divider_line" />

            <TextView
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:textSize="15sp"
                android:textColor="@color/course_name"
                android:background="@drawable/layout_selector_bg"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
