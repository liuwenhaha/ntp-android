<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_pressed"
    android:orientation="vertical">

    <com.ntp.widget.MyTitleView
        android:id="@+id/myTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        ptr:title="@string/detail"
        android:background="@color/nav_bg" />

    <ImageView
        android:id="@+id/h_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myTitleView"
        android:background="@drawable/list_top_line" />

    <LinearLayout
        android:id="@+id/load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/h_line"
        android:background="@color/layout_bg_normal"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:text="@string/load"
            android:textColor="@color/course_name" />
    </LinearLayout>

    <ListView
        android:id="@+id/replyList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:cacheColorHint="#0000"
        android:layout_below="@id/load"
        android:divider="@color/divider_line"
        android:dividerHeight="@dimen/divider_line"
        android:listSelector="@android:color/transparent"
        android:scrollbarStyle="outsideOverlay"/>


    <LinearLayout
        android:id="@id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/layout_bg_pressed"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_top_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pwd"
                style="@style/MyEditStyle2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="3"
                android:hint="@string/replyTip"
                android:inputType="text"
                android:paddingBottom="5dp"
                android:textColor="@color/menu_text_normal" />

            <Button
                android:id="@+id/reply"
                android:layout_width="58dp"
                android:layout_height="30dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_download_btn"
                android:onClick="reply"
                android:text="@string/reply"
                android:textColor="@color/layout_bg_normal"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
