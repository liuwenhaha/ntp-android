<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/call_sms_layout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/layout_bg_normal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/exit_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@string/exitLogin"
                android:clickable="true"
                android:onClick="exitLogin"
                android:textColor="@color/course_name"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/h_line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/list_top_line"
                android:scaleType="matrix" />

            <TextView
                android:id="@+id/exit_app"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:clickable="true"
                android:onClick="exitApp"
                android:text="@string/exitApp"
                android:textColor="@color/course_name"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>